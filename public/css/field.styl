@import 'variables'

rotate2D()
  transform: rotate(arguments)
  -ms-transform: rotate(arguments)
  -webkit-transform: rotate(arguments)
  -moz-transform: rotate(arguments)
  -o-transform: rotate(arguments)

#field

  position:fixed
  top:0
  bottom:0
  right:0
  left:0
  .cards
    position:absolute
    bottom:100px
    left:0
    right:0
    text-align:center
    display:block

    &.oposite
      bottom:auto
      top:100px

      .card
        margin-bottom:0
        &:first-child
          rotate2D 25deg
          margin-bottom:0
        &:nth-child(2)
          rotate2D 15deg
        &:nth-child(3)
          rotate2D 0deg
        &:nth-child(4)
          rotate2D -15deg
          margin-bottom:0
        &:nth-child(5)
          rotate2D -25deg
          margin-bottom:0

        .icon, .cost, .description
          display:none
    .card
      border-radius:16px
      position:relative
      font-size: font-size
      border:2px solid #aaa
      box-shadow: 0 0 1px 2px rgba(0,0,0,0.15)
      height:280px
      width:200px
      display:inline-block

      &:first-child
        rotate2D -25deg
        margin-bottom:-25px
      &:nth-child(2)
        rotate2D -15deg
      &:nth-child(3)
        rotate2D 0deg
      &:nth-child(4)
        rotate2D 15deg
        margin-bottom:-25px
      &:nth-child(5)
        rotate2D 25deg
        margin-bottom:-55px

      &:hover
        z-index: 11

      + .card
        margin-left: -100px

      .icon, .cost
        left:4px
        height:32px
        width:32px
        background:#fff
        position:absolute

      .icon
        top:8px
        border-radius:4px

      .cost
        bottom:8px
        text-align:center
        line-height:28px
        font-size:24px
        border-radius:32px

      .description
        position:absolute
        top:8px
        right:8px
        bottom:8px
        left: 40px
        background: #fff
        border-radius: 8px

      &.bricks
        .icon
          background: url(/img/icons/lorc/originals/svg/mountains.svg)

        background:#c12236 url(/img/ui/noise.png) repeat
      &.recruits
        .icon
          background: url(/img/icons/lorc/originals/svg/flaming-arrow.svg)

        background:#ebb309 url(/img/ui/noise.png) repeat
      &.gems
        .icon
          background: url(/img/icons/lorc/originals/svg/gems.svg)

        background:#2070d8 url(/img/ui/noise.png) repeat


