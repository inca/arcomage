@import 'variables'
#field

  position:fixed
  top:0
  bottom:0
  right:0
  left:0
  .cards
    position:absolute
    margin:0 auto
    bottom:100px
    left:23%
    .card
      border-radius:16px
      position:relative
      font-size: font-size
      border:2px solid #aaa
      box-shadow: 0 0 1px 2px rgba(0,0,0,0.15)
      height:280px
      width:200px
      display:block
      float:left

      + .card
        margin-left:8px

      .color-wrapper
        border-radius:16px
        position:absolute
        top:12px
        bottom:12px
        right:12px
        left:12px

        .icon
          top:8px
          left:4px
          height:32px
          width:32px
          background:#fff
          border-radius:4px
          position:absolute

        .description
          position:absolute
          top:8px
          right:8px
          bottom:8px
          left: 40px
          background: #fff
          border-radius: 8px

      &.bricks
        .icon
          background: url(/img/icons/lorc/originals/svg/mountains.svg)
        .color-wrapper
          background:#c12236 url(/img/ui/noise.png) repeat
      &.recruits
        .icon
          background: url(/img/icons/lorc/originals/svg/flaming-arrow.svg)
        .color-wrapper
          background:#ebb309 url(/img/ui/noise.png) repeat
      &.gems
        .icon
          background: url(/img/icons/lorc/originals/svg/gems.svg)
        .color-wrapper
          background:#2070d8 url(/img/ui/noise.png) repeat


